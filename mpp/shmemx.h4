    _Generic(SHMEM_C11_TYPE_EVAL_PTR_OR_SCALAR(SHMEM_C11_ARG0(__VA_ARGS__)), \
        shmem_ctx_t: shmemx_ctx_signal_add, \
        uint64_t*: shmemx_signal_add \
